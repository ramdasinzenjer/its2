<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/idfront_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/idback"
                    />
                <TextView
                    android:id="@+id/idname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/idfront_"
                    android:layout_alignTop="@id/idfront_"
                    android:layout_alignRight="@id/idfront_"
                    android:layout_alignBottom="@id/idfront_"
                    android:layout_margin="1dp"
                    android:text="gender"
                    android:textSize="17dp"
                    android:paddingTop="8dp"
                    android:paddingLeft="140dp"
                    android:textColor="@color/Black" />
                <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/idfront_"
                    android:layout_alignTop="@id/idfront_"
                    android:layout_alignRight="@id/idfront_"
                    android:layout_alignBottom="@id/idfront_"
                    android:layout_margin="1dp"
                    android:text="dob"
                    android:textSize="17dp"
                    android:paddingTop="48dp"
                    android:paddingLeft="140dp"
                    android:textColor="@color/Black" />
                <TextView
                    android:id="@+id/idaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/idfront_"
                    android:layout_alignTop="@id/idfront_"
                    android:layout_alignRight="@id/idfront_"
                    android:layout_alignBottom="@id/idfront_"
                    android:layout_margin="1dp"
                    android:text="address"
                    android:textSize="17dp"
                    android:paddingTop="94dp"
                    android:paddingLeft="100dp"
                    android:textColor="@color/Black" />
                <TextView
                    android:id="@+id/constituency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/idfront_"
                    android:layout_alignTop="@id/idfront_"
                    android:layout_alignRight="@id/idfront_"
                    android:layout_alignBottom="@id/idfront_"
                    android:layout_margin="1dp"
                    android:text="constituency"
                    android:textSize="17dp"
                    android:paddingTop="220dp"
                    android:paddingLeft="170dp"
                    android:textColor="@color/Black" />
                <TextView
                    android:id="@+id/partno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/idfront_"
                    android:layout_alignTop="@id/idfront_"
                    android:layout_alignRight="@id/idfront_"
                    android:layout_alignBottom="@id/idfront_"
                    android:layout_margin="1dp"
                    android:text="partno"
                    android:textSize="17dp"
                    android:paddingTop="248dp"
                    android:paddingLeft="110dp"
                    android:textColor="@color/Black" />




            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
