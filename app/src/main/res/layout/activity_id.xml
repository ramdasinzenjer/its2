<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:layout_constraintBottom_creator="1"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintTop_creator="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

                    <ImageView
                        android:id="@+id/idfront_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:src="@drawable/idfront"
                        tools:layout_constraintLeft_creator="1"
                        tools:layout_constraintTop_creator="1"
                        android:layout_marginTop="7dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/fathersname" />

                    <ImageView
                        android:id="@+id/lcface"
                        android:layout_width="150dp"
                        android:layout_height="230dp"
                        android:src="@drawable/sampleface"
                        tools:layout_constraintLeft_creator="1"
                        tools:layout_constraintRight_creator="1"
                        tools:layout_constraintTop_creator="1"
                        android:layout_marginStart="62dp"
                        android:layout_marginEnd="63dp"
                        app:layout_constraintRight_toRightOf="@+id/idfront_"
                        android:layout_marginTop="79dp"
                        app:layout_constraintLeft_toLeftOf="@+id/fathersname"
                        app:layout_constraintTop_toTopOf="@+id/fathersname" />

                    <TextView
                        android:id="@+id/idname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="110dp"
                        android:paddingTop="326dp"
                        android:text="Name"
                        android:textColor="@color/Black"
                        android:textSize="19dp"
                        tools:layout_constraintLeft_creator="1"
                        tools:layout_constraintTop_creator="1"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="7dp"
                        app:layout_constraintLeft_toLeftOf="@+id/fathersname"
                        app:layout_constraintTop_toTopOf="@+id/idfront_" />

                    <TextView
                        android:id="@+id/fathersname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="110dp"
                        android:paddingTop="410dp"
                        android:text="fathersname"
                        android:textColor="@color/Black"
                        android:textSize="19dp"
                        tools:layout_constraintLeft_creator="1"
                        tools:layout_constraintTop_creator="1"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintLeft_toLeftOf="@+id/idfront_"
                        app:layout_constraintTop_toTopOf="parent" />


                </android.support.constraint.ConstraintLayout>






